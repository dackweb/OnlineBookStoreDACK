                         </div>
                            <div class="col-sm-2">
                                <h3 >Số lượng:{{this.number}} </h3>
                            </div>
                           
                        </div>
                  
                 {{/each}}
                  
                  
                   
                  
                   
                   </section>
                     <div class="row">
