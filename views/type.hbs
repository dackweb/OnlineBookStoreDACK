<div class="breadcrumb">
        <div class="container">
            <a class="breadcrumb-item" href="home">Home</a>
            <span class="breadcrumb-item active">Shop</span>
        </div>
    </div>
    <section class="static about-sec">
        <div class="container">
            
            <div class="recomended-sec">
                <div class="row">
                    {{#each results}}
                    <div class="col-lg-3 col-md-6">
                        <div class="item">
                            <img src="{{this.img}}" alt="img">
                            <h3>{{this.name}}</h3>
                            <h6><span class="price">{{this.price}}</span> / <a href="#">Buy Now</a></h6>
                            <div class="hover">
                                <a href="/single-product/{{this.id}}">
                            <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                            </a>
                            </div>
                        </div>
                    </div>
                 {{/each}}
                </div>
            </div>
          
  
       
         <ul class="pagination pagination-centered">
   
   
    {{#paginate pagination type="previous"}}
      <li {{#if disabled}}class=" disabled"{{/if}}><a class="page-link"href="{{filter ../x}}&page={{n}}">Prev</a></li>
    {{/paginate}}
    {{#paginate pagination type="middle" limit="3"}}
      <li {{#if active}}class="active"{{/if}}><a class="page-link"href="{{filter ../x}}&page={{n}}">{{n}}</a></li>
    {{/paginate}}
    {{#paginate pagination type="next"}}
      <li {{#if disabled}}class="disabled"{{/if}}><a class="page-link"href="{{filter ../x}}&page={{n}}">Next</a></li>
    {{/paginate}}
  </ul>
    </div>
        
     
    </section>