<div class="breadcrumb">
        <div class="container">
            <a class="breadcrumb-item" href="home">Home</a>
            <span class="breadcrumb-item active">Shop</span>
        </div>
    </div>
    <section class="static about-sec">
        <div class="container">
            <h2>highly recommendes books</h2>
            <div class="recomended-sec">
                <div class="row">
                    {{#each results}}
                    <div class="col-lg-3 col-md-6">
                        <div class="item">
                            <img src="{{this.img}}" alt="img">
                            <h3>{{this.name}}</h3>
                            <h6><span class="price">{{this.price}}</span> / <a href="#">Buy Now</a></h6>
                            <div class="hover">
                                <a href="/single-product/{{this.id}}">
                            <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                            </a>
                            </div>
                        </div>
                    </div>
                 {{/each}}
                </div>
            </div>
          
  
       
          <nav aria-label="Page navigation example">
              <div class="text-center">
                <ul class="pagination" >
                    <li><a class="page-link"href="page?page=1">1</a></li>
                    <li><a class="page-link"href="page?page=2">2</a></li>
                    <li><a class="page-link"href="page?page=3">3</a></li>
                    <li><a class="page-link"href="page?page=4">4</a></li>
     
                </ul>
            </div>
        </nav>
    </div>
        
     
    </section>