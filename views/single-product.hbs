
    <div class="breadcrumb">
        <div class="container">
            <a class="breadcrumb-item" href="/">Home</a>
            <span class="breadcrumb-item active">Terms and Condition</span>
        </div>
    </div>
    <section class="product-sec">
        <div class="container">
            <h1>7 Day Self publish How to Write a Book</h1>
            <div class="row">
                 {{#each result}}
                <div class="col-md-5 ">
                    <img src ="{{this.img}}"alt ="picture"height="420" width="360">
                </div>
                
                    <!--/main slider carousel-->
                
                <div class="col-md-6 ">
                 
                   
                        <li>
                            <span class="name">Tên: {{this.name}}</span>
                            <p>Giá {{this.price}}</p>
                             <p>Lượt xem: {{this.countViews}}</p>
                            <p>Lượt mua: {{this.countBuys}}</p>
                            <a href = "/search/author/{{this.author}}"><p>Tác giả: {{this.author}}</p></a>
                            <a href = "/search/type/{{this.type}}"><p>Loại sách: {{this.type}}</p></a>
                           
                            <p>{{this.description}}</p>

                        </li>
                      
                    
                    <div class="btn-sec">
                        <button class="btn myButton" id = "cart" value = "{{this.id}}">Add To cart</button>
                        <a href = "/cart"><button class="btn black">Buy Now</button></a>
                    </div>
                   
                </div>
                 {{/each}}
            </div>
        </div>
    </section>
    
    <section class = "related book">
        <div class="container">
            <h2>Cùng thể loại</h2>
            <div class="recomended-sec">
                <div class="row">
                    {{#each results}}
                    <div class="col-lg-3 col-md-6">
                        <div class="item">
                            <img src="{{this.img}}" alt="img">
                            <h3>{{this.name}}</h3>
                           
                            <h6><span class="price">{{this.price}}</span> / <a href="/single-product/{{this.id}}">Xem</a></h6>
                            <div class="hover">
                                <a href="/single-product/{{this.id}}">
                            <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                            </a>
                            </div>
                        </div>
                    </div>
                 {{/each}}
                </div>
            </div>
    </section>
    <section class="border-top comments">
      
        <div class="container">
            <h2>Bình luận</h2>
          
                 <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <h4>{{username}}</h4>
                    </div>
                 </div>
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <div class="item">
                            <img src="/images/img1.jpg" alt="img" height="42" width="42">
                            <form id = "addCMT" >
                            <input type = "hidden" id = "userid" value = {{userid}}>
                            <input type = "hidden" id = "cmtid" value = {{cmtid}}>
                            <input type = "text"  name = "thêm bình luận">
                            <button type="submit" value="Thêm">Thêm</button>
                            </form>
                            
                        </div>
                    </div>
                   
                </div>
           
        </div>
       
    </section>
  
    </div>
   
        <div class="container">
            {{#each cmt}}
            
            
                 <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <strong>{{this.username}}</strong>
                    </div>
                 </div>
                
                 
                <div class="row">
                    <div class="col-lg-1">
                       
                            <img src="{{this.img}}" alt="img" height="42" width="42">
                           
                           
                          
                          
                    </div>
                     <div class="col">
                         <p>{{this.content}}</p>
                     </div>
                         </div>
                   {{/each}}
                   
              
            
        </div>
         </div>
          <ul class="pagination pagination-centered">
   
    {{#paginate pagination type="previous"}}
      <li {{#if disabled}}class=" disabled"{{/if}}><a class="page-link"href="{{cmt ../x}}&page={{n}}">Prev</a></li>
    {{/paginate}}
    {{#paginate pagination type="middle" limit="3"}}
      <li {{#if active}}class="active"{{/if}}><a class="page-link"href="{{cmt ../x}}&page={{n}}">{{n}}</a></li>
    {{/paginate}}
    {{#paginate pagination type="next"}}
      <li {{#if disabled}}class="disabled"{{/if}}><a class="page-link"href="{{cmt ../x}}&page={{n}}">Next</a></li>
    {{/paginate}}
    
  </ul>
    
    